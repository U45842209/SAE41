
version: '3.3'
services:
  db:
    image: mysql:8.0
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: 'sae410'
      MYSQL_USER: 'user'
      MYSQL_PASSWORD: 'GPC_C_LA_VIE'
      MYSQL_ROOT_PASSWORD: 'GPC_C_LA_VIE'
    ports:
      - '127.0.0.1:3306:3306'
    volumes:
      - my-db:/var/lib/mysql

  fastapi:
    build: .
    container_name: fastapi-application
    environment:
      PORT: 8000
    ports:
      - '8000:8000'
    restart: unless-stopped
    volumes:
      - fastapi:/var/lib/fastapi
# Names our volume
volumes:
  my-db:
  fastapi:
